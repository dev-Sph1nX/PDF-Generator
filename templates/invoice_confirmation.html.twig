<!DOCTYPE html>
<html>
	<head>
		<title>Confirmation de Facture</title>
		<!-- Styles CSS pour la confirmation -->
		<style>
			/* Styles CSS pour la confirmation */
			body {
				font-family: Arial, sans-serif;
				margin: 20px;
			}
			.confirmation {
				max-width: 600px;
				margin: 0 auto;
			}
			h1 {
				text-align: center;
			}
			table {
				width: 100%;
				border-collapse: collapse;
				margin-top: 20px;
			}
			th,
			td {
				border: 1px solid #ccc;
				padding: 8px;
				text-align: left;
			}
			th {
				background-color: #f2f2f2;
			}
			/* ... d'autres styles si nécessaire */
		</style>
	</head>
	<body>
		<div class="confirmation">
			<h1>Détails de la Facture</h1>
			<h2>Nom du client</h2>
			<p>{{ formData.clientName }}</p>

			<h2>Produits achetés</h2>
			<table>
				<thead>
					<tr>
						<th>Nom du produit</th>
						<th>Quantité</th>
						<th>Prix</th>
					</tr>
				</thead>
				<tbody>
					{% for product in formData.products %}
						<tr>
							<td>{{ product.name }}</td>
							<td>{{ product.quantity }}</td>
							<td>{{ product.price }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<br><br>
			<!-- Lien pour générer le PDF -->
			<a href="{{ path('pdf_generator', {'clientName': formData.clientName, 'products': formData.products}) }}">
				Générer le PDF
			</a>

		</div>
	</body>
</html>
